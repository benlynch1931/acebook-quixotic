<h1>WELCOME TO ACEBOOK</h1>

<h2>Add a Post</h2>

<div class ="create_post">

<%= form_with model: @post, local: true do |form| %>
  <%= form.label :message %>
  <%= form.text_area :message, :maxlength => 1000 %>

  <%= form.submit "Submit" %>
<% end %>
</div>





<ul>
  <% @posts.each do |post| %>
    <li><%= post.message %></li>
  <% end %>
</ul>
<%= link_to new_post_path do %>
  New post
<% end %>

